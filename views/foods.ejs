<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include ('partials/nav.ejs') %>
    <main>
      <section class="add-button-holder">
        <button class="add-button primary-button">
          <a class="text-sm" href="/foods/add">Add New Food</a>
        </button>
      </section>
      <section class="card-holder">
        <% locals.foods.forEach((food) => { %>
          <div class="card" data-id=<%= food.id %>>
            <h3 class="text-sm-plus"><%= food.title %></h3>
            <h4 class="light-gray"><%= food.category %></h4>
            <p><%= food.description %></p>
            <div class="button-holder">
              <% if (!food.default) { %>
                <button class="primary-button"><a href="/foods/<%= food.id %>/edit">Edit</a></button>
                <form action="/foods/<%= food.id %>/delete" method="post">
                  <button class="secondary-button bold">Delete</button>
                </form>
              <% } else { %>
                <h5>Default</h5>
              <% } %>
            </div>
          </div>
        <% }); %>
      </section>
    </main>
  </body>
</html>
